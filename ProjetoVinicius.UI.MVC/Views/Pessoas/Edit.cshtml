@model ProjetoVinicius.Domain.Entities.Pessoa

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post" id="form" action="/Pessoas/Edit">
    @Html.HiddenFor(model => model.IdPessoa)
    @*<input type="hidden" name="IdPessoa"  value="@Model.IdPessoa" />*@
    <div class="form-horizontal">
        <div class="form-group">
            <label class="radio-inline">
                Nome:
                <input type="text" name="nome" value="@Model.nome" class="form-control" />
            </label>
        </div>
        <div class="form-group">
            <label class="radio-inline">
                cpf:
                <input type="text" name="cpf" value="@Model.cpf" class="form-control" />
            </label>
        </div>
        <div class="form-group">
            <label class="radio-inline">
                cep:
                <input type="text" name="cep" value="@Model.cep" class="form-control" />
            </label>
        </div>
        <div class="form-group">
            <label class="radio-inline">
                Rua:
                <input type="text" name="rua" value="@Model.rua" class="form-control" />
            </label>
        </div>
        <div class="form-group">
            <label class="radio-inline">
                Bairro:
                <input type="text" name="bairro" value="@Model.bairro" class="form-control" />
            </label>
        </div>
        <div class="form-group">
            <label class="radio-inline">
                Estado:
                <input type="text" name="estado" value="@Model.estado" class="form-control" />
            </label>
        </div>
        <div class="form-group">
            <label class="radio-inline">
                Sexo
                <input type="text" name="sexo" value="@Model.sexo" class="form-control" />
            </label>
        </div>
        <div class="form-group">
            <label class="radio-inline">
                Data:
                <input type="text" name="Data" value="@Model.Data" class="form-control" />
            </label>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

